<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/language_header">

        <ListPreference
            app:key="language"
            app:defaultValue="English"
            app:entries="@array/reply_entries"
            app:entryValues="@array/language_values"
            app:title="@string/language_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/reminder_header">

        <SwitchPreferenceCompat
            app:key="reminder"
            app:summaryOff="@string/reminder_summary_off"
            app:summaryOn="@string/reminder_summary_on"
            app:title="@string/reminder_title" />

    </PreferenceCategory>

</PreferenceScreen>